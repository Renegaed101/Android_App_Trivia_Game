<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/questionCardVideoView0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleX="1.2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_question_image" />

    <VideoView
        android:id="@+id/questionCardVideoView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleX="1.2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_question_image" />

    <VideoView
        android:id="@+id/questionCardVideoView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleX="1.2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_question_image" />

    <VideoView
        android:id="@+id/questionCardVideoView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleX="1.2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_question_image" />

    <VideoView
        android:id="@+id/questionCardVideoView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleX="1.2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_question_image" />


    <ImageView
        android:id="@+id/iv_main_question_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/transparent"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />

    <View
        android:id="@+id/imageBlackOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="#000"
        android:scaleX="1.2"
        app:layout_constraintBottom_toTopOf="@+id/questionCardVideoView0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_main_question_image" />

    <View
        android:id="@+id/cardAnimationBlackOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:scaleX="1.2"
        app:layout_constraintBottom_toBottomOf="@+id/questionCardVideoView0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/questionCardVideoView0" />

    <TextView
        android:id="@+id/tv_main_question_title"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/atma_light"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        app:autoSizeMaxTextSize="24sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_question_image"
        app:layout_constraintVertical_bias="0.5"
        tools:text="How much wood would a wood chuck chuck if a wood chuck could chuck wood?" />

    <androidx.cardview.widget.CardView
        android:id="@+id/multiplierTextCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintWidth_percent="0.35"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="-8dp"
        android:alpha="0.8"
        android:backgroundTint="@color/grey"
        android:visibility="visible"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_question_image"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/multiplierTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:elevation="3dp"
            android:text="Multiplier Inactive"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/ll_main_first_row_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/music_toggle_game"
            app:layout_constraintVertical_bias="0.98"
            tools:visibility="visible" />

    </androidx.cardview.widget.CardView>

    <com.mahdshahzad.triviam.VerticalBarView
        android:id="@+id/multiplierBar"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/multiplierTextCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mahdshahzad.triviam.VerticalBarView
        android:id="@+id/multiplierBarSkeleton"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/multiplierTextCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/multiplierActivatedTextVeiw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:text="TextView"
        android:textColor="@color/selectedButtonColor"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/multiplierBar"
        app:layout_constraintStart_toEndOf="@+id/multiplierBar"
        app:layout_constraintTop_toTopOf="@+id/multiplierBar"
        app:layout_constraintVertical_bias="0.75"
        tools:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.42"
        app:layout_constraintHeight_percent="0.06"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.8"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/questionCardVideoView0"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:text="Score:10000"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/scoreChangeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-16dp"
        android:elevation="3dp"
        android:text="TextView"
        android:textColor="@color/Green"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>